# =============================================================================
# FW Admin API Gateway - Environment Configuration
# =============================================================================
# Copy this file to .env and configure for your environment.
# In production, ALL variables marked [REQUIRED] must be explicitly set.
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Server port (default: 8787)
PORT=8787

# Environment mode: development | production | test
NODE_ENV=development

# Log level: fatal | error | warn | info | debug | trace
# Development default: debug, Production default: info
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Upstream Service URLs [REQUIRED in production]
# -----------------------------------------------------------------------------

# FW Document Analysis service URL
# Development default: http://localhost:5050
FW_ANALYSIS_SERVICE_URL=http://localhost:5050

# BackPro AI Platform API URL
# Development default: http://localhost:8000
BACKPRO_SERVICE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Authentication [REQUIRED in production]
# -----------------------------------------------------------------------------

# Comma-separated list of valid API keys
# IMPORTANT: The default 'dev' key is NOT allowed in production
# Generate secure keys with: openssl rand -hex 32
FW_ADMIN_API_KEYS=dev

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Comma-separated list of allowed origins for CORS
# Development default: http://localhost:3000,http://localhost:3001,http://localhost:5173
# Production: Must be explicitly set, empty = reject all cross-origin requests
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Time window for rate limiting in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# Maximum requests per window per IP (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Request Limits
# -----------------------------------------------------------------------------

# Maximum request body size (default: 1mb)
# Supports: b, kb, mb, gb suffixes
BODY_SIZE_LIMIT=1mb

# -----------------------------------------------------------------------------
# Graceful Shutdown
# -----------------------------------------------------------------------------

# Timeout for graceful shutdown in milliseconds (default: 10000 = 10 seconds)
SHUTDOWN_TIMEOUT_MS=10000
