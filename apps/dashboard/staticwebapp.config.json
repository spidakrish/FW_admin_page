{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "platform": {
    "apiRuntime": "node:20"
  },
  "routes": [
    {
      "route": "/api/*",
      "rewrite": "/api/*"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/_next/*",
      "/static/*",
      "*.{css,scss,js,png,gif,ico,jpg,svg,json,woff,woff2}"
    ]
  },
  "globalHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "camera=(), microphone=(), geolocation=()",
    "X-XSS-Protection": "1; mode=block"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".yaml": "text/yaml",
    ".yml": "text/yaml"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/404.html"
    }
  },
  "trailingSlash": "never"
}
